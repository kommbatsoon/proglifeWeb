{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "ecmaFeatures": {
    "modules": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "plugins": [
    "react"
  ],
  "rules": {
    "semi": [2, "always"],
    "no-console": 0,
    "no-debugger": 2,
    "no-shadowed-variable": true,
    "no-trailing-whitespace": true,
    "new-cap": 0,
    "strict": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "eol-last": 0,
    "quotes": [2, "single"],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "react/prop-types": 0,
    "react/jsx-closing-bracket-location":0,
    "space-infix-ops": 0,
    "comma-dangle": [2, "never"],
    "prop-types":[0,"never"],
    "jsx-quotes": [2, "prefer-single"],
    "comment-format": [
      true,
      "check-space"
    ],
    "no-multi-spaces": [1, {
      "exceptions": {
          "VariableDeclarator": true,
          "ImportDeclaration": true,
          "Property": true
      }
    }]
  }
}
